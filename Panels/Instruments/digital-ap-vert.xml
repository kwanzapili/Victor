    </layers>

    <actions>

	<!-- Select ALT HLD mode -->
	<action>
	    <name>Select alt</name>
	    <button>0</button>
	    <x>-58</x>
	    <y>-8</y>
	    <w>18</w>
	    <h>15</h>
	    <binding>
		<command>nasal</command>
		<script>victor.toggle_alt();</script>
	    </binding>
	</action>

	<!-- ALT adjustments -->

	<action>
	    <name>Minus 1000 alt</name>
	    <button>0</button>
	    <x>-38</x>
	    <y>-8</y>
	    <w>12</w>
	    <h>12</h>
	    <binding>
		<command>dial-adjust</command>
		<property alias="../../../../params/alt-ctrl"/>
		<step>-1000</step>
		<min>0</min>
		<max>70000</max>
		<wrap>0</wrap>
	    </binding>
	</action>

	<action>
	    <name>Minus 100 alt</name>
	    <button>0</button>
	    <x>-23</x>
	    <y>-8</y>
	    <w>12</w>
	    <h>12</h>
	    <binding>
		<command>dial-adjust</command>
		<property alias="../../../../params/alt-ctrl"/>
		<step>-100</step>
		<min>0</min>
		<max>70000</max>
		<wrap>0</wrap>
	    </binding>
	</action>

	<action>
	    <name>Plus 100 alt</name>
