<?xml version="1.0"?>

<PropertyList>

    <name>Digital armament display</name>
    <w-base>80</w-base>
    <h-base>60</h-base>

    <params>
	<stn-id>/controls/armament/station[0]/id</stn-id>
	<count-select>/controls/armament/station[0]/units</count-select>
	<armed-select>/controls/armament/station[0]/armed</armed-select>
    </params>

    <layers>

	<layer>
	    <name>Top background</name>
	    <texture>
		<path>Panels/Instruments/Textures/trans-dgrey-bg.rgb</path>
		<x1>0.6</x1>
		<y1>0.2</y1>
		<x2>0.9</x2>
		<y2>0.3</y2>
	    </texture>
	    <w>80</w>
	    <h>45</h>
	    <transformations>
		<transformation>
		    <type>y-shift</type>
		    <offset>15</offset>
		</transformation>
	    </transformations>
	</layer>

	<!-- The "bulb" -->
	<layer>
	    <name>Armed light</name>
	    <type>switch</type>
	    <layer>
		<condition>
		    <property alias="../../../../../params/armed-select"/>
		</condition>
		<name>on</name>
		<texture>
		    <path>Aircraft/Instruments/Textures/warning-lamps.rgb</path>
		    <x1>0.25</x1>
		    <y1>0.0</y1>
		    <x2>0.5</x2>
		    <y2>0.095</y2>
		</texture>
		<w>80</w>
		<h>20</h>
		<transformations>
		    <transformation>
			<type>y-shift</type>
			<offset>-15</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>off</name>
		<texture>
		    <path>Aircraft/Instruments/Textures/warning-lamps.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>0.25</x2>
		    <y2>0.095</y2>
		</texture>
		<w>80</w>
		<h>20</h>
		<transformations>
		    <transformation>
			<type>y-shift</type>
			<offset>-15</offset>
		    </transformation>
		</transformations>
	    </layer>
	</layer>

	<!-- translucent lens -->
	<layer>
	    <name>Armed status</name>
	    <type>switch</type>
	    <layer>
		<condition>
		    <property alias="../../../../../params/armed-select"/>
		</condition>
		<name>armed lens</name>
		<texture>
		    <path>Aircraft/Instruments/Textures/warning-lamps.rgb</path>
		    <x1>0.2</x1>
		    <y1>0.3</y1>
		    <x2>0.6</x2>
		    <y2>0.4</y2>
		</texture>
		<w>80</w>
		<h>20</h>
		<transformations>
		    <transformation>
			<type>y-shift</type>
			<offset>-15</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>unarmed lens</name>
		<texture>
		    <path>Aircraft/Instruments/Textures/warning-lamps.rgb</path>
		    <x1>0.2</x1>
		    <y1>0.7</y1>
		    <x2>0.6</x2>
		    <y2>0.8</y2>
		</texture>
		<w>80</w>
		<h>20</h>
		<transformations>
		    <transformation>
			<type>y-shift</type>
			<offset>-15</offset>
		    </transformation>
		</transformations>
	    </layer>
	</layer>

	<layer>
	    <name>Title</name>
	    <type>text</type>
	    <point-size>14</point-size>
	    <color>
		<red>  1.0 </red>
		<green>1.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>Station </text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-35</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>10</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Station ID display</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>6</point-size>
	    <color>
		<red>  1.0 </red>
		<green>1.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>number-value</type>
		    <property alias="../../../../../params/stn-id"/>
		    <format>%2.0f</format>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>20</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>12</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Count</name>
	    <type>text</type>
	    <point-size>12</point-size>
	    <color>
		<red>  1.0 </red>
		<green>1.0 </green>
		<blue> 1.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>Load: </text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-30</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-5</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Station Ammunition display</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>5</point-size>
	    <color>
		<red>  0.0 </red>
		<green>1.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>number-value</type>
		    <property alias="../../../../../params/count-select"/>
		    <format>%2.0f</format>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>10</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-2</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Armed Switch</name>
	    <type>switch</type>
	    <layer>
		<condition>
		    <property alias="../../../../../params/armed-select"/>
		</condition>
		<name>Armed</name>
		<type>text</type>
		<font>accid</font>
		<point-size>12</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>Armed</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-20</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>-18</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>Unarmed</name>
		<type>text</type>
		<font>accid</font>
		<point-size>12</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>Unarmed</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-25</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>-18</offset>
		    </transformation>
		</transformations>
	    </layer>
	</layer>

    </layers>

</PropertyList>
