<?xml version="1.0"?>

<PropertyList>

    <name>Digital AP Heading + Pitch Controls</name>
    <w-base>120</w-base>
    <h-base>60</h-base>

    <params>
	<pitch-disp>/autopilot/settings/target-pitch-deg</pitch-disp>
	<pitch-ctrl>/instrumentation/flightdirector/pitch-deg</pitch-ctrl>
	<hdg-disp>/autopilot/settings/heading-bug-deg</hdg-disp>
	<hdg-ctrl>/instrumentation/heading-indicator/heading-bug-deg</hdg-ctrl>
    </params>

    <layers>

	<layer>
	    <name>background</name>
	    <texture>
		<path>Panels/Instruments/Textures/trans-dgrey-bg.rgb</path>
		<x1>0.6</x1>
		<y1>0.2</y1>
		<x2>0.9</x2>
		<y2>0.3</y2>
	    </texture>
	    <w>120</w>
	    <h>60</h>
	</layer>

	<!-- Lateral mode -->

	<layer>
	    <name>Lateral Mode</name>
	    <type>text</type>
	    <font>helvetica_bold</font>
	    <point-size>16</point-size>
	    <color>
		<red>  1.0 </red>
		<green>0.3 </green>
		<blue> 0.4 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>Lat: </text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-55</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>12</offset>
		</transformation>
	    </transformations>
	</layer>

	<!-- Lateral mode display: LEVEL, HEADING, NAV, LOC -->
	<layer>
	    <name>Mode Display</name>
	    <type>switch</type>
	    <layer>
		<name>Level Mode</name>
		<condition>
		    <or>
			<equals>
			    <property>/instrumentation/flightdirector/lnav</property>
			    <value>1</value>
			</equals>
			<equals>
			    <property>/instrumentation/flightdirector/lnav</property>
			    <value>6</value>
			</equals>
		    </or>
		</condition>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>LEVEL</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-5</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>12</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>Heading Mode</name>
		<condition>
		    <equals>
			<property>/instrumentation/flightdirector/lnav</property>
			<value>2</value>
		    </equals>
		</condition>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>HEADING</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-5</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>12</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>Nav Mode</name>
		<condition>
		    <equals>
			<property>/instrumentation/flightdirector/lnav</property>
			<value>3</value>
		    </equals>
		</condition>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>NAV</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-5</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>12</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>LOC Mode</name>
		<condition>
		    <equals>
			<property>/instrumentation/flightdirector/lnav</property>
			<value>4</value>
		    </equals>
		</condition>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>LOC</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-5</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>12</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>TACAN Mode</name>
		<condition>
		    <equals>
			<property>/instrumentation/flightdirector/lnav</property>
			<value>5</value>
		    </equals>
		</condition>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>TACAN</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-5</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>12</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>Runway Mode</name>
		<condition>
		    <equals>
			<property>/instrumentation/flightdirector/lnav</property>
			<value>6</value>
		    </equals>
		</condition>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>RUNWAY</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-5</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>12</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>Off Mode</name>
		<condition>
		    <equals>
			<property>/instrumentation/flightdirector/lnav</property>
			<value>0</value>
		    </equals>
		</condition>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>OFF</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-5</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>12</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <!-- end switch -->
	</layer>

	<!-- Pitch-hold mode -->

	<layer>
	    <name>Select Pitch</name>
	    <type>text</type>
	    <font>arial_black</font>
	    <point-size>12</point-size>
	    <color>
		<red>  0.0 </red>
		<green>1.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>P:</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-55</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-6</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Decr 1 Pitch</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>7</point-size>
	    <color>
		<red>  0.0 </red>
		<green>1.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>-</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-38</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-8</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Decr 0.1 Pitch</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>7</point-size>
	    <color>
		<red>  0.0 </red>
		<green>0.8 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>-</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-23</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-8</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>AP Pitch display</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>6</point-size>
	    <color>
		<red>  1.0 </red>
		<green>1.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>number-value</type>
		    <property alias="../../../../../params/pitch-disp"/>
		    <format>%2.2f</format>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-13</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-8</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Incr 0.1 Pitch</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>7</point-size>
	    <color>
		<red>  0.0 </red>
		<green>0.8 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>+</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>32</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-8</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Incr 1 Pitch</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>7</point-size>
	    <color>
		<red>  0.0 </red>
		<green>1.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>+</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>47</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-8</offset>
		</transformation>
	    </transformations>
	</layer>

	<!-- Heading mode -->

	<layer>
	    <name>Select Heading</name>
	    <type>text</type>
	    <font>arial_black</font>
	    <point-size>12</point-size>
	    <color>
		<red>  0.0 </red>
		<green>1.0 </green>
		<blue> 1.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>H:</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-55</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-23</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Decr 10 heading</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>7</point-size>
	    <color>
		<red>  0.0 </red>
		<green>1.0 </green>
		<blue> 1.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>-</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-38</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-25</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Decr 1 heading</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>7</point-size>
	    <color>
		<red>  0.0 </red>
		<green>0.8 </green>
		<blue> 0.8 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>-</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-23</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-25</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>AP Hdg display</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>6</point-size>
	    <color>
		<red>  1.0 </red>
		<green>1.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>number-value</type>
		    <property alias="../../../../../params/hdg-disp"/>
		    <format>%3.0f</format>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-8</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-25</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Incr 1 heading</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>7</point-size>
	    <color>
		<red>  0.0 </red>
		<green>0.8 </green>
		<blue> 0.8 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>+</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>32</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-25</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Incr 10 heading</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>7</point-size>
	    <color>
		<red>  0.0 </red>
		<green>1.0 </green>
		<blue> 1.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>+</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>47</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-25</offset>
		</transformation>
	    </transformations>
	</layer>

    </layers>

    <actions>

	<!-- Select Pitch HLD mode -->
	<action>
	    <name>Select Pitch</name>
	    <button>0</button>
	    <x>-58</x>
	    <y>-8</y>
	    <w>18</w>
	    <h>15</h>
	    <binding>
		<command>nasal</command>
		<script>victor.toggle_ptch();</script>
	    </binding>
	</action>

	<!-- Pitch adjustments -->

	<action>
	    <name>Minus 1 Pitch</name>
	    <button>0</button>
	    <x>-38</x>
	    <y>-8</y>
	    <w>12</w>
	    <h>12</h>
	    <binding>
		<command>dial-adjust</command>
		<property alias="../../../../params/pitch-ctrl"/>
		<step>-1</step>
		<min>-10</min>
		<max>20</max>
		<wrap>0</wrap>
	    </binding>
	</action>

	<action>
	    <name>Minus 0.1 Pitch</name>
	    <button>0</button>
	    <x>-23</x>
	    <y>-8</y>
	    <w>12</w>
	    <h>12</h>
	    <binding>
		<command>dial-adjust</command>
		<property alias="../../../../params/pitch-ctrl"/>
		<step>-0.1</step>
		<min>-10</min>
		<max>20</max>
		<wrap>0</wrap>
	    </binding>
	</action>

	<action>
	    <name>Plus 0.1 Pitch</name>
	    <button>0</button>
	    <x>30</x>
	    <y>-8</y>
	    <w>12</w>
	    <h>12</h>
	    <binding>
		<command>dial-adjust</command>
		<property alias="../../../../params/pitch-ctrl"/>
		<step>0.1</step>
		<min>-10</min>
		<max>20</max>
		<wrap>0</wrap>
	    </binding>
	</action>

	<action>
	    <name>Plus 1 Pitch</name>
	    <button>0</button>
	    <x>45</x>
	    <y>-8</y>
	    <w>12</w>
	    <h>12</h>
	    <binding>
		<command>dial-adjust</command>
		<property alias="../../../../params/pitch-ctrl"/>
		<step>1</step>
		<min>-10</min>
		<max>20</max>
		<wrap>0</wrap>
	    </binding>
	</action>

	<!-- Select Heading mode -->
	<action>
	    <name>Select Heading</name>
	    <button>0</button>
	    <x>-58</x>
	    <y>-25</y>
	    <w>18</w>
	    <h>15</h>
	    <binding>
		<command>nasal</command>
		<script>victor.cycle_heading();</script>
	    </binding>
	</action>

	<!-- Heading adjustments -->

	<action>
	    <name>Minus 10 heading</name>
	    <button>0</button>
	    <x>-38</x>
	    <y>-25</y>
	    <w>12</w>
	    <h>12</h>
	    <binding>
		<command>dial-adjust</command>
		<property alias="../../../../params/hdg-ctrl"/>
		<step>-10</step>
		<min>0</min>
		<max>360</max>
		<wrap>1</wrap>
	    </binding>
	</action>

	<action>
	    <name>Minus 1 heading</name>
	    <button>0</button>
	    <x>-23</x>
	    <y>-25</y>
	    <w>12</w>
	    <h>12</h>
	    <binding>
		<command>dial-adjust</command>
		<property alias="../../../../params/hdg-ctrl"/>
		<step>-1</step>
		<min>0</min>
		<max>360</max>
		<wrap>1</wrap>
	    </binding>
	</action>

	<action>
	    <name>Plus 1 heading</name>
	    <button>0</button>
	    <x>30</x>
	    <y>-25</y>
	    <w>12</w>
	    <h>12</h>
	    <binding>
		<command>dial-adjust</command>
		<property alias="../../../../params/hdg-ctrl"/>
		<step>1</step>
		<min>0</min>
		<max>360</max>
		<wrap>1</wrap>
	    </binding>
	</action>

	<action>
	    <name>Plus 10 heading</name>
	    <button>0</button>
	    <x>45</x>
	    <y>-25</y>
	    <w>12</w>
	    <h>12</h>
	    <binding>
		<command>dial-adjust</command>
		<property alias="../../../../params/hdg-ctrl"/>
		<step>10</step>
		<min>0</min>
		<max>360</max>
		<wrap>1</wrap>
	    </binding>
	</action>

    </actions>

</PropertyList>
