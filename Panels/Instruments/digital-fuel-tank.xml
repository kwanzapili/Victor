<?xml version="1.0"?>

<PropertyList>

    <name>Digital Fuel Tank monitor display</name>
    <w-base>110</w-base>
    <h-base>25</h-base>

    <params>
	<tank-num>/consumables/fuel/tank[0]/tank-num</tank-num>
	<level-select>/fdm/jsbsim/propulsion/tank[0]/pct-full</level-select>
    </params>

    <layers>

	<layer>
	    <name>background</name>
	    <texture>
		<path>Panels/Instruments/Textures/trans-purple-bg.rgb</path>
		<x1>0.6</x1>
		<y1>0.2</y1>
		<x2>0.9</x2>
		<y2>0.3</y2>
	    </texture>
	    <w>110</w>
	    <h>25</h>
	</layer>

	<layer>
	    <name>Title</name>
	    <type>text</type>
	    <point-size>14</point-size>
	    <color>
		<red>  0.0 </red>
		<green>1.0 </green>
		<blue> 1.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>Tank</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-50</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-10</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Number</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>5</point-size>
	    <color>
		<red>  1.0 </red>
		<green>1.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>number-value</type>
		    <property alias="../../../../../params/tank-num"/>
		    <format>%2.0f :</format>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-5</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-7</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Level display</name>
	    <type>text</type>
	    <font>led</font>
	    <point-size>5</point-size>
	    <color>
		<red>  1.0 </red>
		<green>1.0 </green>
		<blue> 1.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>number-value</type>
		    <property alias="../../../../../params/level-select"/>
		    <format>%3.1f</format>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>15</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-7</offset>
		</transformation>
	    </transformations>
	</layer>

    </layers>

</PropertyList>
