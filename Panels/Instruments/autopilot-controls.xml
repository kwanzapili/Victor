<?xml version="1.0"?>

<PropertyList>

    <name>Autopilot Controls</name>
    <w-base>100</w-base>
    <h-base>60</h-base>

    <layers>

	<layer>
	    <name>background</name>
	    <texture>
		<path>Aircraft/Instruments/Textures/faces-3.rgb</path>
		<x1>0.6</x1>
		<y1>0.2</y1>
		<x2>0.9</x2>
		<y2>0.3</y2>
	    </texture>
	    <w>100</w>
	    <h>60</h>
	</layer>

	<layer>
	    <name>Title</name>
	    <type>text</type>
	    <point-size>16</point-size>
	    <color>
		<red>  0.0 </red>
		<green>0.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>Controls</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-40</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>8</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>AP Title</name>
	    <type>text</type>
	    <point-size>14</point-size>
	    <color>
		<red>  0.0 </red>
		<green>0.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>A/P: </text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-45</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-10</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>FD Title</name>
	    <type>text</type>
	    <point-size>14</point-size>
	    <color>
		<red>  0.0 </red>
		<green>0.0 </green>
		<blue> 0.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>F/D: </text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-45</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-27</offset>
		</transformation>
	    </transformations>
	</layer>

	<!-- A/P Display -->
	<layer>
	    <name>AP Display</name>
	    <type>switch</type>
	    <layer>
		<condition>
		    <property>instrumentation/flightdirector/autopilot-engage</property>
		</condition>
		<name>AP On</name>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  0.0 </red>
		    <green>1.0 </green>
		    <blue> 0.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>ON</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>0</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>-7</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>AP Off</name>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  0.0 </red>
		    <green>1.0 </green>
		    <blue> 0.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>OFF</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>0</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>-7</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <!-- end AP switch -->
	</layer>

	<!-- FD Display -->
	<layer>
	    <name>FD Display</name>
	    <type>switch</type>
	    <layer>
		<name>FD Off</name>
		<condition>
		    <equals>
			<property>autopilot/locks/passive-mode</property>
			<value>-1</value>
		    </equals>
		</condition>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  0.0 </red>
		    <green>1.0 </green>
		    <blue> 0.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>OFF</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>0</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>-24</offset>
		    </transformation>
		</transformations>
	    </layer>

	    <layer>
		<name>FD Auto</name>
		<condition>
		    <equals>
			<property>autopilot/locks/passive-mode</property>
			<value>0</value>
		    </equals>
		</condition>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  0.0 </red>
		    <green>1.0 </green>
		    <blue> 0.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>AUTO</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>0</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>-24</offset>
		    </transformation>
		</transformations>
	    </layer>

	    <layer>
		<name>FD Active</name>
		<condition>
		    <equals>
			<property>autopilot/locks/passive-mode</property>
			<value>1</value>
		    </equals>
		</condition>
		<type>text</type>
		<font>accid</font>
		<point-size>14</point-size>
		<color>
		    <red>  0.0 </red>
		    <green>1.0 </green>
		    <blue> 0.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>ACTIVE</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>0</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>-24</offset>
		    </transformation>
		</transformations>
	    </layer>

	    <!-- end FD switch -->
	</layer>

    </layers>

    <actions>

	<!-- Toggle AP Mode -->
	<action>
	    <name>AP Toggle</name>
	    <button>0</button>
	    <x>-45</x>
	    <y>-10</y>
	    <w>40</w>
	    <h>15</h>
	    <binding>
		<command>nasal</command>
		<script>victor.toggle_autopilot();</script>
	    </binding>
	</action>

	<!-- Toggle FD Mode -->
	<action>
	    <name>FD Toggle</name>
	    <button>0</button>
	    <x>-45</x>
	    <y>-27</y>
	    <w>40</w>
	    <h>15</h>
	    <binding>
		<command>nasal</command>
		<script>victor.toggle_fd();</script>
	    </binding>
	</action>

    </actions>

</PropertyList>
