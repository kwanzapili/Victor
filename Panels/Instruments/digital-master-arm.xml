<?xml version="1.0"?>

<PropertyList>

    <name>Digital Master Arm</name>
    <w-base>80</w-base>
    <h-base>60</h-base>

    <layers>

	<layer>
	    <name>Top background</name>
	    <texture>
		<path>Panels/Instruments/Textures/trans-dgrey-bg.rgb</path>
		<x1>0.6</x1>
		<y1>0.2</y1>
		<x2>0.9</x2>
		<y2>0.3</y2>
	    </texture>
	    <w>80</w>
	    <h>45</h>
	    <transformations>
		<transformation>
		    <type>y-shift</type>
		    <offset>15</offset>
		</transformation>
	    </transformations>
	</layer>

	<!-- The "bulb" -->
	<layer>
	    <name>Armed light</name>
	    <type>switch</type>
	    <layer>
		<condition>
		    <property>/controls/armament/master-arm</property>
		</condition>
		<name>on</name>
		<texture>
		    <path>Aircraft/Instruments/Textures/warning-lamps.rgb</path>
		    <x1>0.25</x1>
		    <y1>0.0</y1>
		    <x2>0.5</x2>
		    <y2>0.095</y2>
		</texture>
		<w>80</w>
		<h>20</h>
		<transformations>
		    <transformation>
			<type>y-shift</type>
			<offset>-15</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>off</name>
		<texture>
		    <path>Aircraft/Instruments/Textures/warning-lamps.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>0.25</x2>
		    <y2>0.095</y2>
		</texture>
		<w>80</w>
		<h>20</h>
		<transformations>
		    <transformation>
			<type>y-shift</type>
			<offset>-15</offset>
		    </transformation>
		</transformations>
	    </layer>
	</layer>

	<!-- translucent lens -->
	<layer>
	    <name>Armed status</name>
	    <type>switch</type>
	    <layer>
		<condition>
		    <property>/controls/armament/master-arm</property>
		</condition>
		<name>armed lens</name>
		<texture>
		    <path>Aircraft/Instruments/Textures/warning-lamps.rgb</path>
		    <x1>0.2</x1>
		    <y1>0.3</y1>
		    <x2>0.6</x2>
		    <y2>0.4</y2>
		</texture>
		<w>80</w>
		<h>20</h>
		<transformations>
		    <transformation>
			<type>y-shift</type>
			<offset>-15</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>unarmed lens</name>
		<texture>
		    <path>Aircraft/Instruments/Textures/warning-lamps.rgb</path>
		    <x1>0.2</x1>
		    <y1>0.7</y1>
		    <x2>0.6</x2>
		    <y2>0.8</y2>
		</texture>
		<w>80</w>
		<h>20</h>
		<transformations>
		    <transformation>
			<type>y-shift</type>
			<offset>-15</offset>
		    </transformation>
		</transformations>
	    </layer>
	</layer>

	<layer>
	    <name>Title1</name>
	    <type>text</type>
	    <point-size>14</point-size>
	    <color>
		<red>  1.0 </red>
		<green>1.0 </green>
		<blue> 1.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>Master</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-28</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>10</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Title2</name>
	    <type>text</type>
	    <point-size>14</point-size>
	    <color>
		<red>  1.0 </red>
		<green>1.0 </green>
		<blue> 1.0 </blue>
	    </color>
	    <chunks>
		<chunk>
		    <type>literal</type>
		    <text>Arm</text>
		</chunk>
	    </chunks>
	    <transformations>
		<transformation>
		    <type>x-shift</type>
		    <offset>-20</offset>
		</transformation>
		<transformation>
		    <type>y-shift</type>
		    <offset>-5</offset>
		</transformation>
	    </transformations>
	</layer>

	<layer>
	    <name>Armed Switch</name>
	    <type>switch</type>
	    <layer>
		<condition>
		    <property>/controls/armament/master-arm</property>
		</condition>
		<name>Armed</name>
		<type>text</type>
		<font>accid</font>
		<point-size>12</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>ON</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-10</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>-18</offset>
		    </transformation>
		</transformations>
	    </layer>
	    <layer>
		<name>Unarmed</name>
		<type>text</type>
		<font>accid</font>
		<point-size>12</point-size>
		<color>
		    <red>  1.0 </red>
		    <green>1.0 </green>
		    <blue> 1.0 </blue>
		</color>
		<chunks>
		    <chunk>
			<type>literal</type>
			<text>OFF</text>
		    </chunk>
		</chunks>
		<transformations>
		    <transformation>
			<type>x-shift</type>
			<offset>-10</offset>
		    </transformation>
		    <transformation>
			<type>y-shift</type>
			<offset>-18</offset>
		    </transformation>
		</transformations>
	    </layer>
	</layer>

    </layers>

    <actions>
	<!-- Toggle master arm ststus -->
	<action>
	    <name>Toggle Master Arm</name>
	    <button>0</button>
	    <x>-35</x>
	    <y>-24</y>
	    <w>70</w>
	    <h>17</h>
	    <binding>
		<command>switch-toggle</command>
		<property>/controls/armament/master-arm</property>
	    </binding>
	</action>
    </actions>

</PropertyList>
