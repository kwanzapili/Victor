<?xml version="1.0"?>

<PropertyList>
    <label>
	<name>G Load</name>
	<width>28</width>
	<height>12</height>

	<format>%4.2f g</format>
	<halign>right</halign>
	<box>false</box>

	<input>
	    <property>/instrumentation/accelerometer/g-load</property>
	    <factor>1.0</factor>
	    <damp>1.3</damp>
	</input>

	<blinking>
	    <interval>0.25</interval>
	    <condition>
		<or>
		    <!-- G load < -1.0 -->
		    <less-than>
			<property>/instrumentation/accelerometer/g-load</property>
			<value>-1.0</value>
		    </less-than>

		    <!-- G load > 3.0 -->
		    <greater-than>
			<property>/instrumentation/accelerometer/g-load</property>
			<value>3.0</value>
		    </greater-than>
		</or>
	    </condition>
	</blinking>
    </label>
</PropertyList>
