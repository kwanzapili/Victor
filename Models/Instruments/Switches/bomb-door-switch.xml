<?xml version="1.0"?>

<!-- Bomb Bay Door switch -->

<PropertyList>

    <path>bomb-door-switch.ac</path>
    <texture-path>Models/Instruments/Textures</texture-path>

    <animation>
	<type>knob</type>
	<object-name>Switch</object-name>
	<property>/controls/doors/bb-door-pos</property>
	<factor>-30</factor>
	<center>
	    <x-m> 0.0</x-m>
	    <y-m> 0.0</y-m>
	    <z-m> 0.0</z-m>
	</center>
	<axis>
	    <x>0</x>
	    <y>0</y>
	    <z>1</z>
	</axis>

	<action>
	    <binding>
		<condition>
		    <not-equals>
			<property>sim/armament/mission</property>
			<value>Blue Steel</value>
		    </not-equals>
		</condition>
		<command>switch-adjust</command>
		<property>/controls/doors/bb-door-pos</property>
		<factor>1</factor>
		<min>-1</min>
		<max>1</max>                
		<wrap>false</wrap>
	    </binding>
	</action>
	<hovered>
	    <binding>
		<command>set-tooltip</command>
		<label>Bomb Bay Door Switch</label>
		<tooltip-id>bb_switch</tooltip-id>
	    </binding>
	</hovered>
    </animation>

    <!-- Panel Lighting -->
    <animation include="Models/Instruments/Lighting/switch-normal.xml">
	<object-name>Switch</object-name>
    </animation>

    <!-- *** LoD *** -->
    <animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
    </animation>

    <effect>
	<inherits-from>Effects/model-combined-deferred</inherits-from>
	<parameters>
	    <lightmap-enabled type="int">1</lightmap-enabled>
	    <lightmap-factor type="float" n="0">0.3</lightmap-factor>
	    <lightmap-factor type="float" n="1">0.3</lightmap-factor>
	    <lightmap-factor type="float" n="2">0.3</lightmap-factor>
	    <reflection-enabled type="int">0</reflection-enabled>
	    <ambient-correction type="float">0.05</ambient-correction>
	</parameters>
	<object-name>Switch</object-name>
    </effect>

</PropertyList>
