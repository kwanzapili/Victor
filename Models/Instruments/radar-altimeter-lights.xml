<?xml version="1.0"?>

<!-- 
    Radar Limiter Lights indicate that the altitude is:
	Red:	below warning threshold
	Amber:	close to warning threshold
	Green:	clear off warning threshold
-->

<PropertyList>

    <path>radar-altimeter-lights.ac</path>

    <!-- Remove the mount -->
    <animation>
	<type>select</type>
	<object-name>LimiterLights</object-name>
    </animation>

    <animation>
	<type>material</type>
	<object-name>LightGreen</object-name>
	<emission>
	    <factor-prop>/controls/radar/altimeter/limiter-light-green</factor-prop>
	    <red>  0.0</red>
	    <green>1.0</green>
	    <blue> 0.0</blue>
	</emission>
    </animation>

    <animation>
	<type>material</type>
	<object-name>LightAmber</object-name>
	<emission>
	    <factor-prop>/controls/radar/altimeter/limiter-light-amber</factor-prop>
	    <red>  0.5</red>
	    <green>0.5</green>
	    <blue> 0.0</blue>
	</emission>
    </animation>

    <animation>
	<type>material</type>
	<object-name>LightRed</object-name>
	<emission>
	    <factor-prop>/controls/radar/altimeter/limiter-light-red</factor-prop>
	    <red>  1.0</red>
	    <green>0.0</green>
	    <blue> 0.0</blue>
	</emission>
    </animation>

    <!-- *** LoD *** -->
    <animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
    </animation>

</PropertyList>
