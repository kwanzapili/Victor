<?xml version = '1.0' encoding = 'UTF-8' ?>

<PropertyList>

    <!-- ILS -->

    <path>ILS.ac</path>

    <animation>
	<name>Collection1</name>
	<object-name>GSNeedle</object-name>
	<object-name>GSFlag</object-name>
	<object-name>LOCFlag</object-name>
	<object-name>LOCNeedle</object-name>
    </animation>

    <animation>
	<name>Collection2</name>
	<object-name>bezeloutside</object-name>
	<object-name>bezelinside</object-name>
	<object-name>faceplate</object-name>
    </animation>

    <animation>
	<name>Collection3</name>
	<object-name>cylinder</object-name>
	<object-name>sphere</object-name>
	<object-name>rect</object-name>
	<object-name>shroud</object-name>
    </animation>

    <animation>
	<name>Collection4</name>
	<object-name>screw_top</object-name>
	<object-name>screw_bottom</object-name>
    </animation>

    <animation>
	<type>rotate</type>
	<object-name>LOCNeedle</object-name>
	<property>instrumentation/nav[0]/heading-needle-deflection</property>
	<factor>-3.2</factor>
	<center>
	    <x-m>0.003</x-m>
	    <y-m>0.000</y-m>
	    <z-m>0.023</z-m>
	</center>
	<axis>
	    <x>-1</x>
	    <y> 0</y>
	    <z> 0</z>
	</axis>
    </animation>

    <animation>
	<name>GSNeedle</name>
	<type>rotate</type>
	<object-name>GSNeedle</object-name>
	<property>instrumentation/nav[0]/gs-needle-deflection</property>
	<min>-3.5</min>
	<max>3.5</max>
	<interpolation>
	    <entry>
		<ind>-3.5</ind>
		<dep>-30</dep>
	    </entry>
	    <entry>
		<ind>3.5</ind>
		<dep>30</dep>
	    </entry>
	</interpolation>
	<center>
	    <x-m> 0.003</x-m>
	    <y-m>-0.024</y-m>
	    <z-m> 0.000</z-m>
	</center>
	<axis>
	    <x>-1</x>
	    <y> 0</y>
	    <z> 0</z>
	</axis>
    </animation>

    <animation>
	<type>select</type>
	<object-name>GSFlag</object-name>
	<condition>
	    <or>
		<not>
		    <property>instrumentation/nav[0]/gs-in-range</property>
		</not>
		<not>
		    <property>instrumentation/nav[0]/has-gs</property>
		</not>
	    </or>
	</condition>
    </animation>

    <animation>
	<type>select</type>
	<object-name>LOCFlag</object-name>
	<condition>
	    <or>
		<not>
		    <property>instrumentation/nav[0]/in-range</property>
		</not>
		<not>
		    <property>instrumentation/nav[0]/nav-loc</property>
		</not>
	    </or>
	</condition>
    </animation>

    <animation include="Models/Instruments/Lighting/gauge-indicators.xml">
	<object-name>Collection1</object-name>
    </animation>

    <!-- *** LoD *** -->
    <animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
    </animation> 

</PropertyList>
