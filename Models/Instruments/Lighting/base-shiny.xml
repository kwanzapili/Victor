<?xml version="1.0"?>

<!-- Base or inset of a switch / dial / knob : shiny -->

<PropertyList>

    <type>material</type>
    <condition>
	<property>/controls/lighting/panel-lights</property>
	<!-- We must have enough electrical power -->
	<greater-than>
	    <property>/systems/electrical/outputs/panel-lights</property>
	    <value> 100 </value>
	</greater-than>
    </condition>
    <emission>
	<factor-prop>controls/lighting/panel-norm</factor-prop>
	<red>   0.40 </red>
	<green> 0.20 </green>
	<blue>  0.15 </blue>
    </emission>
    <specular>
	<red>   0.7 </red>
	<green> 0.7 </green>
	<blue>  0.7 </blue>
    </specular>
    <shininess> 64 </shininess>

</PropertyList>
