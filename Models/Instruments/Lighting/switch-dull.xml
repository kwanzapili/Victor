<?xml version="1.0"?>

<!-- Knobs, dials, switches, and handles : dull -->

<PropertyList>

    <type>material</type>
    <condition>
	<property>controls/lighting/panel-lights</property>
	<!-- We must have enough electrical power -->
	<greater-than>
	    <property>systems/electrical/outputs/panel-lights</property>
	    <value> 100 </value>
	</greater-than>
    </condition>
    <emission>
	<factor-prop>controls/lighting/panel-norm</factor-prop>
	<red>   0.40 </red>
	<green> 0.20 </green>
	<blue>  0.15 </blue>
    </emission>
    <diffuse>
	<red>   0.7 </red>
	<green> 0.7 </green>
	<blue>  0.7 </blue>
    </diffuse>
    <ambient>
	<red>   0.7 </red>
	<green> 0.7 </green>
	<blue>  0.7 </blue>
    </ambient>
    <shininess> 20 </shininess>

</PropertyList>
