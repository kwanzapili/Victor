<?xml version="1.0"?>

<!-- Fully lit lamp -->

<PropertyList>

    <type>material</type>
    <condition>
	<property>/controls/lighting/instrument-lights</property>
	<!-- We must have enough electrical power -->
	<greater-than>
	    <property>/systems/electrical/outputs/instrument-lights</property>
	    <value> 100 </value>
	</greater-than>
    </condition>
    <emission>
	<factor-prop>controls/lighting/instruments-norm</factor-prop>
	<red>   1.0 </red>
	<green> 1.0 </green>
	<blue>  1.0 </blue>
    </emission>
    <diffuse>
	<red>   1 </red>
	<green> 1 </green>
	<blue>  1 </blue>
    </diffuse>
    <ambient>
	<red>   1 </red>
	<green> 1 </green>
	<blue>  1 </blue>
    </ambient>
    <specular>
	<red>   1 </red>
	<green> 1 </green>
	<blue>  1 </blue>
    </specular>

</PropertyList>
