<?xml version="1.0"?>

<!-- Base, face and background of a gauge -->

<PropertyList>

    <type>material</type>
    <condition>
	<property>controls/lighting/instrument-lights</property>
	<!-- We must have enough electrical power -->
	<greater-than>
	    <property>systems/electrical/outputs/instrument-lights</property>
	    <value> 100 </value>
	</greater-than>
    </condition>
    <emission>
	<factor-prop>controls/lighting/instruments-norm</factor-prop>
	<red>   0.60 </red>
	<green> 0.40 </green>
	<blue>  0.30 </blue>
    </emission>

</PropertyList>
