<?xml version="1.0"?>

<!-- Base or inset of a switch / dial / knob : normal -->

<PropertyList>

    <type>material</type>
    <condition>
	<property>/controls/lighting/panel-lights</property>
	<!-- We must have enough electrical power -->
	<greater-than>
	    <property>/systems/electrical/outputs/panel-lights</property>
	    <value> 100 </value>
	</greater-than>
    </condition>
    <emission>
	<factor-prop>controls/lighting/panel-norm</factor-prop>
	<red>   0.60 </red>
	<green> 0.40 </green>
	<blue>  0.30 </blue>
    </emission>

</PropertyList>
