<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

    <path>APControl.ac</path>

    <animation>
	<name>Collection1</name>
	<object-name>Rings</object-name>
	<object-name>APToggle</object-name>
	<object-name>HDToggle</object-name>
	<object-name>ALTToggle</object-name>
	<object-name>IASToggle</object-name>
	<object-name>ILSToggle</object-name>
    </animation>

    <animation>
	<name>Collection2</name>
	<object-name>APon</object-name>
	<object-name>APoff</object-name>
	<object-name>HDGon</object-name>
	<object-name>HDGoff</object-name>
	<object-name>ALTon</object-name>
	<object-name>ALToff</object-name>
	<object-name>IASon</object-name>
	<object-name>IASoff</object-name>
	<object-name>ILSon</object-name>
	<object-name>ILSoff</object-name>
    </animation>

    <!-- Select Collection2 to clear the blanks left without it -->
    <animation>
	<type>select</type>
	<object-name>Collection2</object-name>
    </animation>

    <animation include="Models/Instruments/Lighting/base-normal.xml">
	<object-name>base</object-name>
    </animation>
    <animation include="Models/Instruments/Lighting/switch-shiny.xml">
	<object-name>Collection1</object-name>
    </animation>

    <!-- AP Toggle rotation -->
    <animation>
	<type>rotate</type>
	<object-name>APToggle</object-name>
	<property>/controls/switches/autopilot</property> 
	<factor> 60 </factor>  
	<center>
	    <x-m> 0.008 </x-m>
	    <y-m> 0.002 </y-m>
	    <z-m> 0.003 </z-m>
	</center>               
	<axis>
	    <x>  0 </x>
	    <y> -1 </y>
	    <z>  0 </z>
	</axis>
    </animation>

    <!-- HDG/WL Toggle rotation -->
    <animation>     
	<type>rotate</type>
	<object-name>HDToggle</object-name>
	<property>/controls/switches/heading-mode</property> 
	<factor> 60 </factor>  
	<center>
	    <x-m> 0.008 </x-m>
	    <y-m> 0.002 </y-m>
	    <z-m> 0.003 </z-m>
	</center>               
	<axis>
	    <x>  0 </x>
	    <y> -1 </y>
	    <z>  0 </z>
	</axis>
    </animation>

    <!-- ALT/VS Toggle rotation -->
    <animation>      
	<type>rotate</type>
	<object-name>ALTToggle</object-name>
	<property>/controls/switches/altitude-mode</property> 
	<factor> 60 </factor>  
	<center>
	    <x-m> 0.008 </x-m>
	    <y-m> 0.002 </y-m>
	    <z-m> 0.003 </z-m>
	</center>               
	<axis>
	    <x>  0 </x>
	    <y> -1 </y>
	    <z>  0 </z>
	</axis>
    </animation>

    <!-- IAS Toggle rotation  -->
    <animation>      
	<type>rotate</type>
	<object-name>IASToggle</object-name>
	<property>/controls/switches/autothrottle</property> 
	<factor> 60 </factor>  
	<axis>
	    <x>  0 </x>
	    <y> -1 </y>
	    <z>  0 </z>
	</axis>
	<center>
	    <x-m> 0.008 </x-m>
	    <y-m> 0.002 </y-m>
	    <z-m> 0.003 </z-m>
	</center>
    </animation>

    <!-- ILS/NAV Toggle rotation -->
    <animation>     
	<type>rotate</type>
	<object-name>ILSToggle</object-name>
	<property>/controls/switches/nav-mode</property> 
	<factor> 60 </factor>  
	<center>
	    <x-m> 0.008 </x-m>
	    <y-m> 0.002 </y-m>
	    <z-m> 0.003 </z-m>
	</center>               
	<axis>
	    <x>  0 </x>
	    <y> -1 </y>
	    <z>  0 </z>
	</axis>
    </animation>

    <!-- Actions -->

    <!-- Toggle AP on/off -->
    <animation>
	<type>pick</type>
	<object-name>APToggle</object-name>
	<condition>
	    <property>/instrumentation/fmc/flight-control-flight-mode</property>
	    <greater-than>
		<property>/instrumentation/fmc/flight-mode</property>
		<value>6</value>        <!-- LIFTOFF -->
	    </greater-than>
	</condition>
	<action>
	    <button>0</button>
	    <repeatable>false</repeatable>
	    <interval-sec>0.2</interval-sec>
	    <binding>
		<command>switch-toggle</command>
		<property>/controls/switches/autopilot</property>
	    </binding>
	</action>
    </animation>

    <!-- Switch Heading Mode -->
    <animation>
	<type>pick</type>
	<object-name>HDToggle</object-name>
	<condition>
	    <property>/instrumentation/fmc/flight-control-flight-mode</property>
	    <greater-than>
		<property>/instrumentation/fmc/flight-mode</property>
		<value>6</value>        <!-- LIFTOFF -->
	    </greater-than>
	</condition>
	<action>
	    <button>0</button>
	    <repeatable>false</repeatable>
	    <interval-sec>0.2</interval-sec>
	    <binding>
		<command>switch-toggle</command>
		<property>/controls/switches/heading-mode</property>
	    </binding>
	</action>
    </animation>

    <!-- Toggle ALT/VS Mode -->
    <animation>
	<type>pick</type>
	<object-name>ALTToggle</object-name>
	<condition>
	    <property>/instrumentation/fmc/flight-control-flight-mode</property>
	    <greater-than>
		<property>/instrumentation/fmc/flight-mode</property>
		<value>6</value>        <!-- LIFTOFF -->
	    </greater-than>
	</condition>
	<action>
	    <button>0</button>
	    <repeatable>false</repeatable>
	    <interval-sec>0.2</interval-sec>
	    <binding>
		<command>switch-toggle</command>
		<property>/controls/switches/altitude-mode</property>
	    </binding>
	</action>
    </animation>

    <!-- Toggle NAV mode -->
    <animation>
	<type>pick</type>
	<object-name>ILSToggle</object-name>
	<condition>
	    <property>/instrumentation/fmc/flight-control-flight-mode</property>
	    <greater-than>
		<property>/instrumentation/fmc/flight-mode</property>
		<value>6</value>        <!-- LIFTOFF -->
	    </greater-than>
	</condition>
	<action>
	    <button>0</button>
	    <repeatable>false</repeatable>
	    <interval-sec>0.2</interval-sec>
	    <binding>
		<command>switch-toggle</command>
		<property>/controls/switches/nav-mode</property>
	    </binding>
	</action>
    </animation>

    <!-- Toggle Autothrottle -->
    <animation>
	<type>pick</type>
	<object-name>IASToggle</object-name>
	<action>
	    <button>0</button>
	    <repeatable>false</repeatable>
	    <interval-sec>0.2</interval-sec>
	    <binding>
		<command>switch-toggle</command>
		<property>/controls/switches/autothrottle</property>
	    </binding>
	</action>
    </animation>

</PropertyList>
