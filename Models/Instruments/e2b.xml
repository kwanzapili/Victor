<?xml version="1.0"?>

<!-- E2B Standby Compass -->

<PropertyList>

    <path>e2b.ac</path>

    <animation>
	<type>rotate</type>
	<object-name>segments</object-name>
	<property>/instrumentation/magnetic-compass/indicated-heading-deg</property>
	<center>
	    <x-m>0</x-m>
	    <y-m>0</y-m>
	    <z-m>0</z-m>
	</center>
	<axis>
	    <x>0</x>
	    <y>0</y>
	    <z>1</z>
	</axis>
    </animation>

    <animation>
	<name>Collection2</name>
	<object-name>cylinder</object-name>
	<object-name>compass_mount</object-name>
	<object-name>plate</object-name>
	<object-name>bracket</object-name>
	<object-name>rect</object-name>
	<object-name>object</object-name>
    </animation>

    <!-- Panel Lighting -->
    <animation include="Models/Instruments/Lighting/gauge-face.xml">
	<object-name>segments</object-name>
    </animation>

    <animation include="Models/Instruments/Lighting/base-normal.xml">
	<object-name>compass_body</object-name>
    </animation>

    <!-- Noshadow -->
    <animation>
	<type>noshadow</type>
    </animation>

    <!-- *** LoD *** -->
    <animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
    </animation>

</PropertyList>
