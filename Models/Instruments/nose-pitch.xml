<?xml version="1.0"?>

<PropertyList>
    <path>nose-pitch.ac</path>
    <texture-path>Models/Instruments/Textures</texture-path>

    <animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/instrumentation/attitude-indicator/indicated-pitch-deg</property>
	<axis>
	    <x>-1</x>
	    <y> 0</y>
	    <z> 0</z>
	</axis>
	<interpolation>
	    <entry><ind>-3 </ind><dep>-45 </dep></entry>
	    <entry><ind> 0 </ind><dep> 0  </dep></entry>
	    <entry><ind> 3 </ind><dep> 45 </dep></entry>
	    <entry><ind> 6 </ind><dep> 90 </dep></entry>
	    <entry><ind> 9 </ind><dep> 120</dep></entry>
	    <entry><ind> 12</ind><dep> 150</dep></entry>
	</interpolation>
    </animation>

    <!-- Resize -->
    <animation>
	<type>scale</type>
	<object-name>nose-pitch</object-name>
	<x-offset>1.2</x-offset>
	<y-offset>1.2</y-offset>
	<z-offset>1.2</z-offset>
    </animation>

    <!-- lighting -->
    <animation include="Models/Instruments/Lighting/gauge-indicators.xml">
	<object-name>needle</object-name>
    </animation>

    <animation include="Models/Instruments/Lighting/gauge-surround.xml">
	<object-name>mount</object-name>
    </animation>

    <animation include="Models/Instruments/Lighting/gauge-face.xml">
	<object-name>face</object-name>
    </animation>

    <animation>
	<object-name>nose-pitch</object-name>
	<type>noshadow</type>
    </animation>

    <!-- LOD -->
    <animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>35</max-m>
    </animation>

</PropertyList>
