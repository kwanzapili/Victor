<?xml version="1.0"?>

<PropertyList>

    <path>shrike.ac</path>

    <!-- 
	Shrike anti-radar missile
    -->
    <animation>
	<type>select</type>
	<object-name>Shrike</object-name>      
	<condition>
	    <greater-than>
		<property>/controls/armament/station[2]/units</property>
		<value>0</value>
	    </greater-than>
	</condition>
    </animation>

    <!-- Don't display the smoke (the submodel will reference the .ac model -->
    <animation>
	<type>select</type>
	<object-name>Smoke</object-name>      
	<condition>
	    <equals>
		<property>/sim/variant/name</property>
		<value>wibble</value>
	    </equals>
	</condition>
    </animation>

</PropertyList>
