<?xml version="1.0"?>

<PropertyList>

    <!-- Wing contrails and vapour effects -->

    <model>
	<name>left_contrail</name>
	<path>Aircraft/victor/Models/Effects/vapour_wing.xml</path>
	<offsets>
	    <x-m> 24.1</x-m>
	    <y-m>-16.6</y-m>
	    <z-m>-0.10</z-m>
	    <heading-deg> 0 </heading-deg>
	    <roll-deg>    0 </roll-deg>
	    <pitch-deg>   0 </pitch-deg>
	</offsets>
	<condition>
	    <or>
		<and>
		    <greater-than>
			<property>velocities/airspeed-kt</property>
			<value>150</value>
		    </greater-than>
		    <greater-than>
			<property>environment/relative-humidity</property>
			<value>50</value>
		    </greater-than>
		    <less-than>
			<property>/position/altitude-ft</property>
			<value>3000</value>
		    </less-than>
		    <greater-than>
			<property>orientation/pitch-deg</property>
			<value>2.0</value>
		    </greater-than>
		</and>
		<greater-than>
		    <property>instrumentation/accelerometer/g-load</property>
		    <value>1.5</value>
		</greater-than>
	    </or>
	</condition>
    </model>

    <model>
	<name>right_contrail</name>
	<path>Aircraft/victor/Models/Effects/vapour_wing.xml</path>
	<offsets>
	    <x-m> 24.1</x-m>
	    <y-m> 16.6</y-m>
	    <z-m>-0.10</z-m>
	    <heading-deg> 0 </heading-deg>
	    <roll-deg>    0 </roll-deg>
	    <pitch-deg>   0 </pitch-deg>
	</offsets>
	<condition>
	    <or>
		<and>
		    <greater-than>
			<property>velocities/airspeed-kt</property>
			<value>150</value>
		    </greater-than>
		    <greater-than>
			<property>environment/relative-humidity</property>
			<value>50</value>
		    </greater-than>
		    <less-than>
			<property>/position/altitude-ft</property>
			<value>3000</value>
		    </less-than>
		    <greater-than>
			<property>orientation/pitch-deg</property>
			<value>2.0</value>
		    </greater-than>
		</and>
		<greater-than>
		    <property>instrumentation/accelerometer/g-load</property>
		    <value>1.5</value>
		</greater-than>
	    </or>
	</condition>

    </model>

    <model>
	<name>vapour_body</name>
	<path>Aircraft/victor/Models/Effects/vapour_body.xml</path>
	<offsets>
	    <x-m>32.9</x-m>
	    <y-m> 0.0</y-m>
	    <z-m> 4.6</z-m>
	    <heading-deg> 0 </heading-deg>
	    <roll-deg>    0 </roll-deg>
	    <pitch-deg>   0 </pitch-deg>
	</offsets>
	<condition>
	    <and>
		<greater-than>
		    <property>velocities/airspeed-kt</property>
		    <value>270</value>
		</greater-than>
		<greater-than>
		    <property>environment/relative-humidity</property>
		    <value>40</value>
		</greater-than>
		<less-than>
		    <property>/position/altitude-ft</property>
		    <value>12000</value>
		</less-than>
		<greater-than>
		    <property>instrumentation/accelerometer/g-load</property>
		    <value>2.0</value>
		</greater-than>
	    </and>
	</condition>
    </model>

    <model>
	<name>contrails_port</name>
	<path>Aircraft/victor/Models/Effects/contrail.xml</path>
	<offsets>
	    <x-m>33.0</x-m>
	    <y-m>-2.9 </y-m>
	    <z-m>-0.0</z-m>
	    <heading-deg> 0 </heading-deg>
	    <roll-deg>    0 </roll-deg>
	    <pitch-deg>   0 </pitch-deg>
	</offsets>
	<condition>
	    <and>
		<greater-than>
		    <property>/position/altitude-ft</property>
		    <value>12000</value>
		</greater-than>
		<less-than>
		    <property>environment/temperature-degc</property>
		    <value>10</value>
		</less-than>
	    </and>
	</condition>
    </model>

    <model>
	<name>contrails_sbrd</name>
	<path>Aircraft/victor/Models/Effects/contrail.xml</path>
	<offsets>
	    <x-m>33.0</x-m>
