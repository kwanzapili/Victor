<?xml version="1.0"?>

<PropertyList>

    <path>bomb.ac</path>

    <!-- 
	Only displayed the racked bomb when the doors are open and the
	bomb hasn't been dropped.
    -->

    <animation>
	<enable-hot type="bool">false</enable-hot>
    </animation>

    <animation>
	<type>select</type>
	<object-name>Body</object-name>      
	<object-name>Fin</object-name>      
	<object-name>Marking</object-name>      
	<condition>
	    <greater-than>
		<property>/controls/doors/bomb-bay/position-norm</property>
		<value>0.05</value>
	    </greater-than>
	</condition>
    </animation>

    <animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>10000</max-m>
    </animation>

</PropertyList>
