		<red>   1.0 </red>
		<green> 0.0 </green>
		<blue>  1.0 </blue>
	    </color>
	    <visible>
		<and>
		    <equals>
			<property>/instrumentation/fmc/throttle-lock</property>
			<value>0</value>
		    </equals>
		    <equals>
			<property>/autopilot/internal/speed-pitch-mode</property>
			<value>1</value>
		    </equals>
		    <equals>
			<property>/instrumentation/flightdirector/autothrottle-engage</property>
			<value>1</value>
		    </equals>
		</and>
	    </visible>
	</text>
