<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <name>autopilot</name>
    <layout>vbox</layout>
    <pref-width>380</pref-width>

    <group>
	<layout>hbox</layout>
	<empty>
	    <stretch type="bool">true</stretch>
	</empty>
	<text>
	    <label>Autopilot Settings</label>
	</text>
	<empty>
	    <stretch type="bool">true</stretch>
	</empty>
	<button>
	    <halign>right</halign>
	    <pref-width>20</pref-width>
	    <pref-height>20</pref-height>
	    <legend>X</legend>
	    <key>Esc</key>
	    <binding>
		<command>dialog-close</command>
	    </binding>
	</button>
    </group>

    <hrule>
	<color>
	    <red>   1.0 </red>
	    <green> 0.0 </green>
	    <blue>  1.0 </blue>
	</color>
	<pref-height>2</pref-height>
    </hrule>

    <!-- Start of Flight Director -->
    <group>
	<layout>table</layout>
	<default-padding>4</default-padding>
	<button>
	    <row>0</row>
	    <col>0</col>
	    <legend>FD</legend>
	    <pref-width>40</pref-width>
	    <pref-height>30</pref-height>
	    <enable>
		<property>/instrumentation/fmc/flight-control-flight-mode</property>
	    </enable>
	    <binding>
		<command>nasal</command>
		<script>victor.toggle_fd();</script>
	    </binding>
	</button>
	<button>
	    <row>0</row>
	    <col>1</col>
	    <legend>AP</legend>
	    <pref-width>40</pref-width>
	    <pref-height>30</pref-height>
	    <enable>
		<property>/instrumentation/fmc/flight-control-flight-mode</property>
	    </enable>
	    <binding>
		<command>switch-toggle</command>
		<property>/controls/switches/autopilot</property>
	    </binding>
	</button>
	<button>
	    <row>0</row>
	    <col>2</col>
	    <legend>A/T</legend>
	    <pref-width>40</pref-width>
	    <pref-height>30</pref-height>
	    <binding>
		<command>switch-toggle</command>
		<property>/controls/switches/autothrottle</property>
	    </binding>
	</button>

	<text>
	    <row>1</row>
	    <col>0</col>
	    <label>[ AUTO ]</label>
	    <pref-height>30</pref-height>
	    <color>
		<red>   1.0 </red>
		<green> 1.0 </green>
		<blue>  0.0 </blue>
	    </color>
	    <visible>
		<equals>
		    <property>/autopilot/locks/passive-mode</property>
		    <value>0</value>
		</equals>
	    </visible>
	</text>
	<text>
	    <row>1</row>
	    <col>0</col>
	    <label>[ ACTIVE ]</label>
	    <pref-height>30</pref-height>
	    <color>
		<red>   1.0 </red>
		<green> 1.0 </green>
		<blue>  0.0 </blue>
	    </color>
	    <visible>
		<equals>
		    <property>/autopilot/locks/passive-mode</property>
		    <value>1</value>
		</equals>
	    </visible>
	</text>

	<text>
	    <row>1</row>
	    <col>1</col>
	    <label>[ ENGAGED ]</label>
	    <pref-height>30</pref-height>
	    <color>
		<red>   0.0 </red>
		<green> 1.0 </green>
		<blue>  1.0 </blue>
	    </color>
	    <visible>
		<equals>
		    <property>/instrumentation/flightdirector/autopilot-engage</property>
		    <value>1</value>
		</equals>
	    </visible>
	</text>

	<!-- Autothrottle modes -->
	<text>
	    <row>1</row>
	    <col>2</col>
	    <label>[ THRUST ]</label>
	    <pref-height>30</pref-height>
	    <color>
		<red>   1.0 </red>
		<green> 0.0 </green>
		<blue>  1.0 </blue>
	    </color>
	    <visible>
		<and>
		    <equals>
			<property>/instrumentation/fmc/throttle-lock</property>
			<value>1</value>
		    </equals>
		    <not-equals>
			<property>/instrumentation/flightdirector/spd</property>
			<value>5</value>    <!-- IDLE -->
		    </not-equals>
		</and>
	    </visible>
	</text>
	<text>
	    <row>1</row>
	    <col>2</col>
