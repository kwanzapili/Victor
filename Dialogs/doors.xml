<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
    <name>doors</name>
    <layout>vbox</layout>
    <pref-width>500</pref-width>

    <!-- Start of Doors and Chute -->
    <empty><stretch>1</stretch></empty>

    <text>
	<label>Doors and Chute Buttons</label>
    </text>

    <hrule>
	<color>
	    <red>  1.0</red>
	    <green>0.0</green>
	    <blue> 1.0</blue>
	</color>
	<pref-height>2</pref-height>
    </hrule>

    <empty><stretch>1</stretch></empty>

    <group>
	<layout>hbox</layout>

	<button>
	    <legend>Toggle Bomb Bay</legend>
	    <enable>
		<not-equals>
		    <property>/sim/armament/mission</property>
		    <value>Blue Steel</value>
		</not-equals>
	    </enable>
	    <binding>
		<command>nasal</command>
		<script>victor.toggle_bb_doors()</script>
	    </binding>
	</button>

	<button>
	    <legend>Toggle Crew Door</legend>
	    <enable>
		<property>/instrumentation/fmc/flight-control-ground-mode</property>
	    </enable>
	    <binding>
		<command>nasal</command>
		<script>victor.toggle_cockpit_door()</script>
	    </binding>
	</button>

	<button>
	    <legend>Toggle Chute</legend>
	    <enable>
		<property>/instrumentation/fmc/flight-control-ground-mode</property>
	    </enable>
	    <binding>
		<command>nasal</command>
		<script>victor.toggle_chute()</script>
	    </binding>
	</button>
    </group>

    <empty><stretch>1</stretch></empty>
    <hrule/>

    <button>
	<legend>Close</legend>
	<default>true</default>
	<key>Esc</key>
	<binding>
	    <command>dialog-close</command>
	</binding>
    </button>

</PropertyList>
